{
  "name": "@web3-ui/root",
  "license": "MIT",
  "version": "0.0.0",
  "private": true,
  "author": "Developer DAO",
  "workspaces": [
    "docs",
    "packages/*"
  ],
  "scripts": {
    "dev:lib": "yarn workspace @web3-ui/components dev",
    "prepare": "husky install",
    "format": "prettier --write",
    "build": "preconstruct build",
    "lint": "eslint packages/**/src/ --ext .ts,.tsx --config .eslintrc",
    "test": "jest",
    "test:watch": "yarn test --watch",
    "test:coverage": "jest --coverage --colors",
    "storybook": "start-storybook -p 6006",
    "postinstall": "preconstruct dev",
    "build-storybook": "build-storybook",
    "chromatic": "chromatic  --exit-zero-on-changes",
    "docs:dev": "yarn workspace docs dev",
    "docs:build": "yarn workspace docs build",
    "docs:serve": "yarn workspace docs start",
    "release": "yarn build && changeset publish"
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.4.2",
    "@changesets/cli": "^2.18.1",
    "@preconstruct/cli": "^2.1.5",
    "@rainbow-me/rainbowkit": "^0.3.4",
    "@testing-library/jest-dom": "^5.15.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "chromatic": "^6.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.3.4",
    "eslint-plugin-jest-dom": "^4.0.1",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^12.1.3",
    "msw": "^0.35.0",
    "prettier": "^2.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^26.4.4",
    "wagmi": "^0.5.5",
    "whatwg-fetch": "^3.6.2"
  },
  "devDependencies": {
    "@babel/core": "^7.18.5",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-react": "^7.17.12",
    "@babel/preset-typescript": "^7.17.12",
    "@radix-ui/colors": "^0.1.8",
    "@stitches/react": "^1.2.8",
    "@storybook/addon-actions": "^6.5.9",
    "@storybook/addon-essentials": "^6.5.9",
    "@storybook/addon-links": "^6.5.9",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/builder-webpack5": "^6.5.9",
    "@storybook/manager-webpack5": "^6.5.9",
    "@storybook/react": "^6.5.9",
    "@types/jest": "^26.0.15",
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.14",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "autoprefixer": "^10.4.7",
    "babel-loader": "^8.2.5",
    "esbuild": "^0.14.48",
    "eslint": "^8.17.0",
    "eslint-plugin-align-import": "^1.0.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-storybook": "^0.5.13",
    "ethers": "^5.6.9",
    "postcss": "^8.4.14",
    "postcss-prefix-selector": "^1.16.0",
    "recursive-readdir-files": "^2.3.0",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0"
  },
  "peerDependencies": {
    "ethers": "^5.5.1",
    "react": ">= 17.0.0 | >= 18.0.0"
  },
  "resolutions": {
    "webpack": "^5"
  },
  "lint-staged": {
    "*.{ts,tsx,md,json}": [
      "prettier --write"
    ]
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  }
}
